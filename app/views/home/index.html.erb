<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1>Welcome to E-Shop</h1>
        <br>
    </div>
</div>

<div class="container">
    <div class="row"    >
        <% @products.each do |product| %>
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="<%= asset_path( 'download.svg' ) %>" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title"><%= product.name %></h5>
                        <p class="card-text"><%= product.small_desc %></p>
                        <%= link_to 'View Detail', product_path(product), class:'btn btn-success' %>
                        <%= button_to 'Add To Cart', cart_items_path(product_id: product), class:'btn btn-info' %>
                    </div>
                </div>    
            </div>
        <% end %>
    </div>
</div>